@model TaskManagementChallenge.Models.TaskCreationViewModel

@{
    ViewData["Title"] = "AddTask";
}

<h1>Add Task</h1>

@*//Create html form to submit data to the controller*@


<form asp-action="AddTask" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" required min="3" max="100"/>
        

    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description"  class="form-control" required  min="3" max="1000" ></textarea>

        
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>



    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>
